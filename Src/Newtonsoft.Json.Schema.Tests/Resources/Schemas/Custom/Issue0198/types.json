{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "types.json#",
  "definitions": {
    "Location": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "location": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "status": {
          "$ref": "types.json#/definitions/Status"
        }
      }
    },
    "Status": {
      "type": [ "object", "null" ],
      "properties": {
        "reason": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "reason",
        "description"
      ]
    }
  }
}